{
  "version": 2,
  "name": "xmltv-epg-service",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "/api"
    },
    {
      "src": "/xmltv",
      "dest": "/api"
    },
    {
      "src": "/epg/xmltv-lr.php",
      "dest": "/api"
    },
    {
      "src": "/(.*)",
      "dest": "/api"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  }
}
